	<bean id="google-vision-repo_ResourceBundles" class="org.alfresco.i18n.ResourceBundleBootstrapComponent">
      <property name="resourceBundles">
         <list>
    	    <value>alfresco.module.google-vision-repo.messages.repo</value>
    	 </list>
      </property>
   	</bean>
	

</beans>